@model IEnumerable<PetViewModel>

<div class="py-5">

    <div class="container">
        <div class="row hidden-md-up">
            @if (Model.Count() == 0)
            {
                <h2 class="align-content-center">No Pets added yet!</h2>
            }
            @foreach (var pet in Model)
            {
                <div class="col-md-4">
                    <div class="team-item">
                        <div class="position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="@pet.Images[0].Url" alt="pet-image">
                            <div class="team-overlay">
                                <div class="d-flex align-items-center justify-content-start">
                                    <a class="btn btn-light btn-square mx-1" href="#"><i class="bi bi-twitter"></i></a>
                                    <a class="btn btn-light btn-square mx-1" href="#"><i class="bi bi-facebook"></i></a>
                                    <a class="btn btn-light btn-square mx-1" href="#"><i class="bi bi-linkedin"></i></a>
                                </div>
                            </div>
                        </div>
                        <div class="bg-light text-center p-4">
                            <h5 class="text-uppercase">@pet.Name</h5>
                            <h5 class="text-uppercase fw-bold">@(pet.IsMale ? Html.Raw("&#9794 Boy") : Html.Raw("&#9792 Girl"))</h5>
                            <p class="m-0">Owner: @pet.Owner</p>
                        </div>
                    </div>
                </div>
            }
        </div><br>
    </div>


</div>


