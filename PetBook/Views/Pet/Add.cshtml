@model PetFormModel

<div class="row">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <img src="~/resources/img/team-3.jpg"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Add Pet</h3>

                        <form class="px-md-2" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-outline mb-4">
                                <input type="text" class="form-control"  asp-for="Name" />
                                <label class="form-label" asp-for="Name">Your Pet Name</label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="radio" name="IsMale" asp-for="IsMale" value="true" />
                                <label asp-for="IsMale">My pet is a boy.</label>
                                <input type="radio" asp-for="IsMale" name="IsMale" value="false" />
                                <label asp-for="IsMale">My pet is a girl.</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="number" class="form-control" asp-for="Age" />
                                <label class="form-label" asp-for="Age">The age of your pet</label>
                                <span asp-validation-for="Age" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <textarea class="form-control" asp-for="Description"></textarea>
                                <label class="form-label" asp-for="Description">Write something about your pet</label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="number" class="form-control" asp-for="Height" />
                                <label class="form-label" asp-for="Height">The aprox height of your pet(cm)</label>
                                <span asp-validation-for="Height" class="text-danger"></span>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="number" class="form-control" asp-for="Weight" />
                                <label class="form-label" asp-for="Weight">The aprox weight of your pet(kg)</label>
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>


                            <div class="form-outline mb-4">

                                <select asp-for="BreedId" class="form-control">

                                    @foreach (var item in Model.Breeds)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <label asp-for="BreedId" class="form-label">Choose breed for your pet:</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="file" multiple class="form-control" asp-for="Images" />
                                <label class="form-label" asp-for="Images">Choose some pictures of your pet</label>
                                <span asp-validation-for="Images" class="text-danger"></span>
                            </div>


                            <button type="submit" class="btn btn-success btn-lg mb-1">Add Pet</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}