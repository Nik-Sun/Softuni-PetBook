@model RegisterViewModel

<div class="row">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-8 col-xl-6">
                <div class="card rounded-3">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
                         class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                         alt="Sample photo">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>

                        <form class="px-md-2" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-outline mb-4">
                                <input type="text" class="form-control" asp-for="FirstName" />
                                <label class="form-label" asp-for="FirstName">First Name</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="text" class="form-control" asp-for="LastName" />
                                <label class="form-label" asp-for="LastName">Last Name</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="email" class="form-control" asp-for="Email" />
                                <label class="form-label" asp-for="Email">Your Email Address</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="text" class="form-control" asp-for="Address" />
                                <label class="form-label" asp-for="Address">Your Address</label>
                            </div>

                            <div class="form-outline mb-4">
                                
                                <select asp-for="CityId" class="form-control">

                                    @foreach (var item in Model.Cities)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                                <label asp-for="CityId" class="form-label">Choose your city:</label>
                            </div>




                            <div class="form-outline mb-4">
                                <input type="password" asp-for="Password" class="form-control" />
                                <label class="form-label" for="form3Example1w">Password</label>
                            </div>
                            <div class="form-outline mb-4">
                                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                                <label class="form-label" for="form3Example1w">Confirm Password</label>
                            </div>




                            <button type="submit" class="btn btn-success btn-lg mb-1">Register</button>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}